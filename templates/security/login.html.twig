{% extends 'base.html.twig' %}

    {% block title %}
       Connexion
                
    {% endblock %}
{% block content %}
{% block body %}
<body style="background-color: #e9edf2;">
<form method="post">
{% if error %}
<div class="alert alert-danger" style="width: 45%;text-align:center; position:absolute;top:240px; left:530px">Login ou mot de passe incorrect !</div>
{% endif %}
{% for message in app.flashes('success') %}
<div class="alert alert-success" style="width: 45%;text-align:center; position:absolute;top:240px; left:530px">
    {{ message }}
</div>
{% endfor %}
    <div class="form-group">
            <table class="table" style="width:50%;position:absolute;top:310px; left:500px;">
                <thead>
                    <h1 style="width:50%;position:absolute;top:160px; left:500px;text-align:center;">
                    Connexion                   
                </h1>
            <tr>
                <td>
                <label for="inputEmail">Votre email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Entrez l'email" autocomplete="email" required autofocus>         
                </td>
                </br>
            </tr>
            <tr>
                <td>
                <label for="inputPassword">Votre mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password"  placeholder="Entrez le mot de passe" required>
                </td>
            </tr>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <td>
        <button type="submit" class="btn btn-success">
        Se connecter                  
        </button>
        <a class="btn btn-danger" href="{{ path('app_home')}}">
            Annuler                     
    </a>'

{#  Vous n'avez pas de compte ? <a href="{{ path('app_register') }}"> <B>S'inscire</B></a>#}
    </td>
</table>
</form>
{% endblock %}
{% endblock %}
